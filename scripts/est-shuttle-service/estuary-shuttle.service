[Unit]
Description=Estuary Shuttle
After=network-online.target postgresql.service

[Service]
User=estuary
Group=estuary
LimitNOFILE=infinity
EnvironmentFile=/etc/estuary-shuttle/log.env
EnvironmentFile=/etc/estuary-shuttle/config.env
ExecStart=/usr/local/bin/estuary-shuttle --database=${ESTUARY_DB_CONN} --datadir=${SHUTTLE_DATA} --apilisten=${SHUTTLE_API} --logging=false --host=${SHUTTLE_HOSTNAME} --handle=${SHUTTLE_HANDLE} --auth-token=${SHUTTLE_AUTH_TOKEN} --blockstore=${SHUTTLE_BLOCKSTORE}
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target
